{
  "parser": "@babel/eslint-parser",

  "parserOptions": {
    "requireConfigFile": false,
    "babelOptions": {
      "presets": ["@babel/preset-react"]
    },
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "plugins": ["react"],

  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],

  "settings": {
    "react": {
      "version": "detect"
    }
  }
}